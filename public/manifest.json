{
  "manifest_version": 2,
  "name": "Company Tab Readonly",
  "description": "Spread information easily",
  "version": "1.2",

  "browser_action": {
    "default_popup": "index.html"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://apis.google.com 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}